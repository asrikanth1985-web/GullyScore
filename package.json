
{
  "name": "gullyscore",
  "version": "1.1.0",
  "description": "Offline Desktop Cricket Tournament Manager",
  "main": "electron-main.js",
  "author": "GullyScore Team",
  "scripts": {
    "start": "npx servor . index.html 8080 --reload",
    "electron": "electron .",
    "build": "electron-builder --win --portable"
  },
  "dependencies": {
    "electron": "^28.2.0"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.gullyscore.app",
    "productName": "GullyScore",
    "win": {
      "target": "portable",
      "artifactName": "${productName}.exe"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!node_modules/**/*"
    ]
  }
}
