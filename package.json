{
  "name": "gullyscore",
  "version": "1.1.0",
  "description": "Offline Cricket Tournament Manager",
  "main": "electron-main.js",
  "author": "GullyScore Team",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "build:desktop": "electron-builder --win --portable",
    "build:android": "vite build && npx cap sync"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@google/genai": "^0.1.0",
    "html2canvas": "^1.4.1",
    "@capacitor/core": "^6.0.0",
    "@capacitor/android": "^6.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "vite": "^5.4.2",
    "vite-plugin-static-copy": "^1.0.6",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "@capacitor/cli": "^6.0.0"
  },
  "build": {
    "appId": "com.gullyscore.app",
    "productName": "GullyScore",
    "win": {
      "target": "portable",
      "artifactName": "${productName}.exe"
    },
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron-main.js",
      "package.json"
    ]
  }
}